# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  ImGui_config = debug
  GLFW_config = debug
  yaml_cpp_config = debug
  BRUH_config = debug

else ifeq ($(config),release)
  ImGui_config = release
  GLFW_config = release
  yaml_cpp_config = release
  BRUH_config = release

else ifeq ($(config),dist)
  ImGui_config = dist
  GLFW_config = dist
  yaml_cpp_config = dist
  BRUH_config = dist

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := ImGui GLFW yaml-cpp BRUH

.PHONY: all clean help $(PROJECTS) Dependencies

all: $(PROJECTS)

Dependencies: GLFW ImGui yaml-cpp

ImGui:
ifneq (,$(ImGui_config))
	@echo "==== Building ImGui ($(ImGui_config)) ===="
	@${MAKE} --no-print-directory -C vendor/imgui -f Makefile config=$(ImGui_config)
endif

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C vendor/GLFW -f Makefile config=$(GLFW_config)
endif

yaml-cpp:
ifneq (,$(yaml_cpp_config))
	@echo "==== Building yaml-cpp ($(yaml_cpp_config)) ===="
	@${MAKE} --no-print-directory -C vendor/yaml-cpp -f Makefile config=$(yaml_cpp_config)
endif

BRUH: ImGui GLFW
ifneq (,$(BRUH_config))
	@echo "==== Building BRUH ($(BRUH_config)) ===="
	@${MAKE} --no-print-directory -C BRUH -f Makefile config=$(BRUH_config)
endif

clean:
	@${MAKE} --no-print-directory -C vendor/imgui -f Makefile clean
	@${MAKE} --no-print-directory -C vendor/GLFW -f Makefile clean
	@${MAKE} --no-print-directory -C vendor/yaml-cpp -f Makefile clean
	@${MAKE} --no-print-directory -C BRUH -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   ImGui"
	@echo "   GLFW"
	@echo "   yaml-cpp"
	@echo "   BRUH"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"